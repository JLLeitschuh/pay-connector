<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE paymentService PUBLIC "-//WorldPay//DTD WorldPay PaymentService v1//EN"
        "http://dtd.worldpay.com/paymentService_v1.dtd">
<paymentService version="1.4" merchantCode="${merchantCode}">
    <submit>
        <order orderCode="${transactionId?xml}" shopperLanguageCode="en">
            <description>${description?xml}</description>
            <amount currencyCode="GBP" exponent="2" value="${amount}"/>
            <paymentDetails>
                <EMVCO_TOKEN-SSL type="APPLEPAY">
                    <tokenNumber>${walletTemplateData.applicationPrimaryAccountNumber?xml}</tokenNumber>
                    <expiryDate><date month="${walletTemplateData.expiryDateMonth}" year="${walletTemplateData.expiryDateYear}"/></expiryDate>
                    <#if walletTemplateData.cardholderName??>
                    <cardHolderName>${walletTemplateData.cardholderName?xml}</cardHolderName>
                    </#if>
                    <cryptogram>${walletTemplateData.onlinePaymentCryptogram?xml}</cryptogram>
                    <#if walletTemplateData.eciIndicator??>
                    <eciIndicator>0${walletTemplateData.eciIndicator?xml}</eciIndicator>
                    </#if>
                </EMVCO_TOKEN-SSL>
            </paymentDetails>
        </order>
    </submit>
</paymentService>
