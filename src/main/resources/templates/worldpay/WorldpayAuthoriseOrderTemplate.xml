<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE paymentService PUBLIC "-//WorldPay//DTD WorldPay PaymentService v1//EN"
        "http://dtd.worldpay.com/paymentService_v1.dtd">
<paymentService version="1.4" merchantCode="${merchantCode}">
    <submit>
        <order orderCode="${transactionId?xml}">
            <description>${description?xml}</description>
            <amount currencyCode="GBP" exponent="2" value="${amount}"/>
            <paymentDetails>
                <VISA-SSL>
                    <cardNumber>${authorisationDetails.cardNo}</cardNumber>
                    <expiryDate>
                        <date month="${authorisationDetails.endDate?split('/')?first}" year="20${authorisationDetails.endDate?split('/')?last}"/>
                    </expiryDate>
                    <cardHolderName>${authorisationDetails.cardHolder?xml}</cardHolderName>
                    <cvc>${authorisationDetails.cvc}</cvc>
                    <cardAddress>
                        <address>
                            <address1>${authorisationDetails.address.line1?xml}</address1>
                            <#if authorisationDetails.address.line2??>
                            <address2>${authorisationDetails.address.line2?xml}</address2>
                            </#if>
                            <postalCode>${authorisationDetails.address.postcode?xml}</postalCode>
                            <city>${authorisationDetails.address.city?xml}</city>
                            <#if authorisationDetails.address.county??>
                            <state>${authorisationDetails.address.county?xml}</state>
                            </#if>
                            <countryCode>${authorisationDetails.address.country?xml}</countryCode>
                        </address>
                    </cardAddress>
                </VISA-SSL>
                <session id="${sessionId?xml}"/>
            </paymentDetails>
            <shopper>
                <browser>
                    <acceptHeader>${authorisationDetails.acceptHeader?xml}</acceptHeader>
                    <userAgentHeader>${authorisationDetails.userAgentHeader?xml}</userAgentHeader>
                </browser>
            </shopper>
        </order>
    </submit>
</paymentService>
