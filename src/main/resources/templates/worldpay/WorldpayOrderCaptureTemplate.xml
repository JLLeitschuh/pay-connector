<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE paymentService PUBLIC "-//WorldPay//DTD WorldPay PaymentService v1//EN"
        "http://dtd.worldpay.com/paymentService_v1.dtd">
<paymentService version="1.4" merchantCode="${merchantCode}">
    <modify>
        <orderModification orderCode="${transactionId}">
            <capture>
                <date dayOfMonth="${captureDate.dayOfMonth().get()?string('00')}" month="${captureDate.monthOfYear().get()?string('00')}" year="${captureDate.year().get()?string('0000')}"/>
                <amount currencyCode="${amount.currencyCode}" exponent="${amount.exponent}" value="${amount.value}"/>
            </capture>
        </orderModification>
    </modify>
</paymentService>